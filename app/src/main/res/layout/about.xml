<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/page1"
        android:id="@+id/imageView12"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

    <TextView
        android:text="Leader Of Project"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:background="@color/colorPrimary"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:layout_gravity="center"/>

    <TextView
        android:text="Ummu Kultsum"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@android:color/background_light"
        android:background="@color/colorlevel"
        android:layout_gravity="center"/>

    <TextView
        android:text="Design and Testing"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:background="@color/colorPrimary"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

    <TextView
        android:text="Rahmi Putri"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@android:color/background_light"
        android:background="@color/colorlevel"
        android:layout_gravity="center"/>

    <TextView
        android:text="Analysis and Implementation"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:background="@color/colorPrimary"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

    <TextView
        android:text="Dinda Kharisma"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@android:color/background_light"
        android:background="@color/colorlevel"
        android:layout_gravity="center"/>

    <TextView
        android:text="Maintenance and Documentation"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

    <TextView
        android:text="Ghina Rosika Amalina"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@android:color/background_light"
        android:background="@color/colorlevel"
        android:layout_gravity="center"/>

    <TextView
        android:text="BiT v1.0"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_home_white_24dp"
        android:id="@+id/fabhome"
        app:backgroundTint="@color/colorlevel"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"/>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLevel2">

    <android.support.design.widget.FloatingActionButton
        android:layout_width="match_parent"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/b1"
        android:id="@+id/materiB1"
        app:backgroundTint="@android:color/transparent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180dp"
        android:layout_height="65dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:layout_weight="15.89">

            <android.support.design.widget.FloatingActionButton
                android:layout_width="match_parent"
                android:clickable="true"
                app:fabSize="mini"
                app:srcCompat="@drawable/b5"
                android:id="@+id/materiB5"
                android:layout_weight="1"
                app:backgroundTint="@android:color/transparent"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="75dp"
                android:layout_height="65dp" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="match_parent"
                android:clickable="true"
                app:fabSize="mini"
                app:srcCompat="@drawable/q2"
                android:id="@+id/quiz2"
                app:backgroundTint="@android:color/transparent"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="match_parent"
                android:clickable="true"
                app:fabSize="mini"
                app:srcCompat="@drawable/b2"
                android:id="@+id/materiB2"
                android:layout_weight="1"
                app:backgroundTint="@android:color/transparent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="75dp"
                android:layout_height="65dp" />
        </LinearLayout>

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center">

            <android.support.design.widget.FloatingActionButton
                android:layout_width="match_parent"
                android:clickable="true"
                app:fabSize="mini"
                app:srcCompat="@drawable/b4"
                android:id="@+id/materiB4"
                app:backgroundTint="@android:color/transparent"
                android:layout_gravity="center_horizontal"
                android:layout_height="65dp"
                app:elevation="7dp" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="match_parent"
                android:clickable="true"
                app:fabSize="mini"
                app:srcCompat="@drawable/b3"
                android:id="@+id/materiB3"
                android:layout_weight="1"
                app:backgroundTint="@android:color/transparent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="75dp"
                android:layout_height="65dp" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>